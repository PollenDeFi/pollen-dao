{
  "name": "pollen-dao-v3",
  "version": "1.0.0",
  "scripts": {
    "build": "npx hardhat clean && npx hardhat compile --no-typechain && npm run generate-interfaces",
    "test": "npx hardhat typechain && npx hardhat test",
    "lint": "npm run lint:ts && npm run lint:sol",
    "lint:ts": "npx eslint . --ext .ts",
    "lint:ts:fix": "npx eslint . --fix --ext .ts",
    "lint:sol": "npx solhint 'contracts/**/*.sol'",
    "lint:sol:fix": "npx solhint 'contracts/**/*.sol' --fix",
    "coverage": "npm run build && npx hardhat coverage",
    "gas-report": "REPORT_GAS=true npx hardhat test",
    "contract-sizer": "CONTRACT_SIZER=true npm run build",
    "prepare": "npx husky install",
    "generate-interfaces": "npx ts-node scripts/abi2Solidity.ts && npx hardhat typechain",
    "deploy:fuji": "npx hardhat run --network fuji scripts/deployment.ts",
    "pricefeeds:fuji": "npx hardhat run --network fuji scripts/addPriceFeed_testnet.ts",
    "uisetup:fuji": "npx hardhat run --network fuji scripts/uiTeamSetup.ts",
    "private-network": "npx hardhat node",
    "deploy-localhost": "npx hardhat migrate --network localhost",
    "deploy-sepolia": "npx hardhat migrate --network sepolia --verify",
    "deploy-mumbai": "npx hardhat migrate --network mumbai --verify",
    "deploy-avalanche": "npx hardhat migrate --network avalanche --verify",
    "deploy-fuji": "npx hardhat migrate --network fuji --verify"
  },
  "lint-staged": {
    "*.ts": [
      "npx eslint '**/*.ts' --fix"
    ],
    "*.sol": [
      "npx solhint 'contracts/**/*.sol' --fix",
      "npx prettier --write 'contracts/**/*.sol'"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/pollen-dao/pollen-dao-v3.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/pollen-dao/pollen-dao-v3/issues"
  },
  "homepage": "https://gitlab.com/pollen-dao/pollen-dao-v3#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/hardhat-upgrades": "^1.10.0",
    "@solarity/hardhat-migrate": "^2.0.1",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^8.2.3",
    "@types/node": "^15.14.1",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "dree": "^2.8.3",
    "eslint": "^7.26.0",
    "eslint-plugin-mocha": "^9.0.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.7.2",
    "hardhat": "^2.19.5",
    "hardhat-abi-exporter": "^2.3.1",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-storage-layout": "^0.1.6",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.17",
    "solhint": "^3.3.4",
    "solidity-coverage": "^0.8.6",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.2.1",
    "@layerzerolabs/lz-evm-sdk-v1-0.7": "^1.5.16",
    "@layerzerolabs/solidity-examples": "^1.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.4",
    "@openzeppelin/contracts": "^4.3.0",
    "@openzeppelin/contracts-upgradeable": "^4.3.0"
  }
}
